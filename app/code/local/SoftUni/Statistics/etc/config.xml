<?xml version="1.0"?>
<config>
    <modules>
        <SoftUni_Statistics>
            <version>1.0.0</version>
        </SoftUni_Statistics>
    </modules>

    <global>
        <blocks>
            <softuni_statistics>
                <class>SoftUni_Statistics_Block</class>
            </softuni_statistics>
        </blocks>

        <helpers>
            <softuni_statistics>
                <class>SoftUni_Statistics_Helper</class>
            </softuni_statistics>
        </helpers>

    </global>
    
    <frontend>
        <translate>
            <modules>
                <SoftUni_Statistics>
                    <files>
                        <default>SoftUni_Statistics.csv</default>
                    </files>
                </SoftUni_Statistics>
            </modules>
        </translate>
        <routers>
            <softuni_statistics>
                <use>standard</use>
                <args>
                    <module>SoftUni_Statistics</module>
                    <frontName>softuni_statistics</frontName>
                </args>
            </softuni_statistics>
        </routers>
        <layout>
            <updates>
                <softuni_statistics module="SoftUni_Statistics">
                    <file>softuni_statistics.xml</file>
                </softuni_statistics>
            </updates>
        </layout>
    </frontend>


</config>

