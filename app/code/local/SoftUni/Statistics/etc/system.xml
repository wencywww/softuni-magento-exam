<?xml version="1.0"?>
<config>
    <tabs><!--creates tabs on the adminhtml page-->
        <softuni_statistics translate="label" module="softuni_statistics">
            <label>SOFTUNI</label>
            <sort_order>300</sort_order>
        </softuni_statistics>
    </tabs>

    <sections>
        <softuni_statistics translate="label" module="softuni_statistics">
            <label>SoftUni Statistics</label>
            <tab>softuni_statistics</tab>
            <frontend_type>text</frontend_type>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <softuni_statistics_group translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <availability translate="label">
                            <label>Page Is Available</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </availability>
                    </fields>
                </softuni_statistics_group>
            </groups>
        </softuni_statistics>
    </sections>
</config>
